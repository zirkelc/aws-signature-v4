{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM"
    ],
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "strict": false
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "vitest.config.ts",
    "**/__tests__/**/*",
    "node_modules/**/*",
  ]
}